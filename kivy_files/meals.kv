<MealSuggestionsScreen>:
    BoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Meal Suggestions"
            left_action_items: [["home", lambda x: root.go_back_to_home()]]
            md_bg_color: 0, 0.5, 0.5, 1
            specific_text_color: 1, 1, 1, 1
            elevation: 10
        
        ScrollView:
            BoxLayout:
                id: meal_container
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: "10dp"
                padding: "20dp"

